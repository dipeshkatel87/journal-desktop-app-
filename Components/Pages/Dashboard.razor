@page "/dashboard"
@using MauiApp1.Models
@using MauiApp1.Services
@inject DatabaseService DB

<h3 class="d-flex align-items-center gap-2 mb-3">
    <span class="bi bi-graph-up"></span>
    Dashboard
</h3>

<button class="btn btn-outline-primary btn-sm mb-3" @onclick="Load">
    <span class="bi bi-arrow-clockwise"></span> Refresh
</button>

@if (loading)
{
    <p>Loading...</p>
}
else if (data == null || data.TotalEntries == 0)
{
    <div class="alert alert-info dash-card">
        No journal entries yet. Add your first entry in <b>Today</b>.
    </div>
}
else
{
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="card dash-card">
                <div class="card-body">
                    <div class="stat-label">Current Streak</div>
                    <div class="stat-value">@data.CurrentStreak</div>
                    <div class="stat-sub">days</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dash-card">
                <div class="card-body">
                    <div class="stat-label">Longest Streak</div>
                    <div class="stat-value">@data.LongestStreak</div>
                    <div class="stat-sub">days</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card dash-card">
                <div class="card-body">
                    <div class="stat-label">Total Entries</div>
                    <div class="stat-value">@data.TotalEntries</div>
                    <div class="stat-sub">entries</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card dash-card mb-3">
        <div class="card-body">
            <h5 class="mb-3">Mood Distribution</h5>

            @MoodBar("Positive", "bg-success")
            @MoodBar("Neutral", "bg-secondary")
            @MoodBar("Negative", "bg-danger")
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card dash-card">
                <div class="card-body">
                    <h5 class="mb-3">Top Moods</h5>

                    @if (data.TopMoods.Count == 0)
                    {
                        <p class="text-muted">No mood data yet.</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var m in data.TopMoods)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @m.Name
                                    <span class="badge bg-primary rounded-pill">@m.Count</span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card dash-card">
                <div class="card-body">
                    <h5 class="mb-3">Top Tags</h5>

                    @if (data.TopTags.Count == 0)
                    {
                        <p class="text-muted">No tags yet.</p>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var t in data.TopTags)
                            {
                                <span class="badge bg-light text-dark tag-chip">
                                    @t.Name <span style="opacity:.7;">(@t.Count)</span>
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted small">
        Missed days (gaps between saved dates): <b>@data.MissedDays</b>
    </div>
}

@code {
    private DashboardData? data;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        loading = true;
        data = await DB.GetDashboardDataAsync();
        loading = false;
    }

    private RenderFragment MoodBar(string key, string barClass) => __builder =>
    {
        var percent = 0.0;

        if (data != null && data.MoodPercent.TryGetValue(key, out var v))
            percent = v;

        __builder.AddMarkupContent(0, $@"
            <div class=""mb-3"">
                <div class=""d-flex justify-content-between"">
                    <span>{key}</span>
                    <span>{percent}%</span>
                </div>
                <div class=""progress"" style=""height: 10px;"">
                    <div class=""progress-bar {barClass}"" style=""width: {percent}%""></div>
                </div>
            </div>
        ");
    };
}
