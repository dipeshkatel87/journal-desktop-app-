@inherits LayoutComponentBase
@inject ThemeState Theme
@implements IDisposable

<div class="@($"{Theme.CssClass} page")">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <span style="opacity:0.7;">JournalDesk — Local SQLite Journal</span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Theme.OnChange += ThemeChanged;
        await Theme.LoadAsync();
    }

    void ThemeChanged() => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        Theme.OnChange -= ThemeChanged;
    }
}
